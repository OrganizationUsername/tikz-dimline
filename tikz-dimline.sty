\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{tikz-dimline}[2013/03/13 v1.0 initial version]

\RequirePackage{tikz}
\RequirePackage{ifthen}

\usetikzlibrary{calc,decorations.markings}

\makeatletter



\pgfkeys {
  /dimline/.cd,
  execute style/.style = {#1},
  execute macro/.style = {/dimline/execute style/.expand once=#1},
}



\newcommand{\dimline@do@nothing}[1]{#1}%

% #1: optional keys parameters
% #2: start point
% #3: end point
% #4: text
\newcommand{\dimline}[4][]{%

  \pgfplotsifinaxis{%
    \coordinate (a) at (axis cs: #2) {};
    \coordinate (b) at (axis cs: #3) {};
    \let\dimline@internal\pgfplotsextra%
  }{%
    \coordinate (a) at (#2) {};
    \coordinate (b) at (#3) {};
    %\def\dimline@internal#1{#1}%
    \let\dimline@internal\dimline@do@nothing%
  }%



  \dimline@internal{
    \pgfkeys{
      %/dimline/.cd,
      dimline/.is family,
      dimline,
      color/.initial = black,
      recall start length/.initial=1cm,
      recall end length/.initial=1cm,
      recall start angle/.initial=-90,
      recall end angle/.initial=90,
      label style/.initial = {},
      recall style/.initial = {},
      recall start style/.initial = {},
      recall end style/.initial = {},
      #1,
      label style/.get = \dimline@label@style,
      recall style/.get = \dimline@recall@style,
      recall start style/.get = \dimline@recall@start@style,
      recall end style/.get = \dimline@recall@end@style,
    }


  \begin{scope} [
    line/.style = {
      color=\pgfkeysvalueof{/dimline/color},|<->|,
    },
    recall/.style = {
      color=\pgfkeysvalueof{/dimline/color}!40, line width=0.01,
      /dimline/execute macro = \dimline@recall@style,
    },
    recall start/.style = {
      recall,
      /dimline/execute macro = \dimline@recall@start@style
    },
    recall end/.style = {
      recall,
      /dimline/execute macro = \dimline@recall@end@style,
    },
    label/.style = {
      fill=white, align=center, sloped=true, pos=0.5,
      /dimline/execute macro = \dimline@label@style
    },
    ]

    \coordinate (a to b) at ($(a)!\pgfkeysvalueof{/dimline/recall start length}!\pgfkeysvalueof{/dimline/recall start angle}:(b)$);
    \coordinate (b to a) at ($(b)!\pgfkeysvalueof{/dimline/recall end length}!\pgfkeysvalueof{/dimline/recall end angle}:(a)$);

    \draw [recall start] (a.center) -- (a to b);
    \draw [recall end] (b.center) -- (b to a);

    \draw[line] (a.center) -- (b.center) node[label] {#4};
  \end{scope}
 }
}



\@ifclassloaded{beamer}{%
  \renewcommand<>{\dimline}[4][]{\only#5{\beameroriginal{\dimline}[#1]{#2}{#3}{#4}}}
}
